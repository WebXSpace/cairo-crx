{
	"compilerOptions": {
		"target": "es2021",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"rootDirs": ["src"],
		"lib": ["esnext", "dom"],
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test/**/*.ts"]
}
