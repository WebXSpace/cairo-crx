{
	"manifest_version": 3,
	"name": "Cario",
	"version": "1.0.0",
	"description": "Web3/Crypto wallet extension",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["inject.js"],
			"all_frames": true,
			"run_at": "document_start"
		}
	],
	"icons": { "128": "assets/icon.png" },
	"permissions": [
		"tabs",
		"action",
		"activeTab",
		"background",
		"webRequest",
		"storage",
		"notifications"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"web_accessible_resources": [
		{
			"matches": ["<all_urls>"],
			"resources": ["etherum.js"]
		}
	],
	"action": {
		"default_title": "Web3/Crypto wallet extension"
	},
	"externally_connectable": {
		"matches": ["http://127.0.0.1:4000/*"]
	}
}
